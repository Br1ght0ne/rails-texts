<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for?(:title) %>
        <%= yield :title %> | Texts
      <% else %>
        Texts
      <% end %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <%= render 'navbar' %>
      <% if content_for?(:forms) %>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-md-6 col-sm-12">
              <h2 class="text-center mt-2 mb-2"><%= yield :title %></h2>
              <%= render 'alerts' %>
              <%= yield :forms %>
            </div>
          </div>
        </div>
      <% else %>
        <%= render 'alerts' %>
        <%= yield %>
      <% end %>
    </div>
  </body>
</html>
