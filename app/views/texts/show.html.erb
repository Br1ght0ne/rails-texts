<% provide(:title, 'List') %>

<div class="row justify-content-center">
  <div class="col-md-6 col-sm-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title"><%= @text.title %>
          <% if @text&.filetype&.present? %>
            <span class="badge border border-primary text-secondary">
              <%= @text.filetype %>
            </span>
          <% end %>
        </h5>
        <h6 class="card-subtitle">
          <span class="text-muted">by </span>
          <%= @text.user.name %>
        </h6>
        <h6 class="mt-1 card-subtitle">
          <% if @text&.tag_list&.empty? %>
            <span class="text-muted">no tags</span>
          <% else %>
            <span class="text-muted">tagged </span>
            <% @tags = @text.tag_list.sort %>
            <% @tags.each do |tag| %>
              <span>
                <%= link_to tag, tagged_texts_path(tag) %><% if tag != @tags.last %><span class="text-muted">, </span><% end %>
              </span>
            <% end %>
          <% end %>
        </h6>
      </div>
      <% if @body.present? %>
        <div class="card-body">
          <p class="card-text">
            <%= sanitize @body.html_safe,
            tags: @text.html_tags,
            attributes: @text.html_attributes %>
          </p>
        </div>
      <% end %>
      <div class="card-footer">

        <div class="btn-toolbar" role="toolbar">
          <div class="btn-group mr-2" role="group">
            <%= link_to 'Back', root_path, class: 'btn btn-outline-secondary' %>
          </div>
          <div class="btn-group mr-2" role="group">
            <%= link_to 'Download', url_for(@text.file), class: 'btn btn-outline-primary' %>
          </div>
          <div class="btn-group mr-2" role="group">
            <% if policy(@text).edit? %>
              <%= link_to 'Edit', edit_text_path(@text),
              class: 'btn btn-outline-dark'%>
            <% end %>
            <% if policy(@text).destroy? %>
              <%= link_to 'Delete', text_path(@text),
              method: :delete, class: 'btn btn-outline-danger'%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
